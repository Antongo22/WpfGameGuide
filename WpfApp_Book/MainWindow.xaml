<Window x:Class="WpfApp_Book.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Book"
        mc:Ignorable="d"
        Title="Учебник WPF" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <TabControl x:Name="MainTabControl" TabStripPlacement="Left">
        <TabItem Header="1. Введение">
            <Frame x:Name="Chapter1Frame" NavigationUIVisibility="Hidden"/>
        </TabItem>
        
        <TabItem Header="2. Окна">
            <Frame x:Name="Chapter2Frame" NavigationUIVisibility="Hidden"/>
        </TabItem>
        
        <TabItem Header="3. Клавиатура">
            <Frame x:Name="Chapter3Frame" NavigationUIVisibility="Hidden"/>
        </TabItem>
        
        <TabItem Header="4. Размещение">
            <Frame x:Name="Chapter4Frame" NavigationUIVisibility="Hidden"/>
        </TabItem>
        
        <TabItem Header="5. Анимация">
            <Frame x:Name="Chapter5Frame" NavigationUIVisibility="Hidden"/>
        </TabItem>
        
        <TabItem Header="6. Управление">
            <Frame x:Name="Chapter6Frame" NavigationUIVisibility="Hidden"/>
        </TabItem>
        
        <TabItem Header="7. Графы">
            <Frame x:Name="Chapter7Frame" NavigationUIVisibility="Hidden"/>
        </TabItem>
        
        <TabItem Header="8. Финал">
            <Frame x:Name="Chapter8Frame" NavigationUIVisibility="Hidden"/>
        </TabItem>
    </TabControl>
</Window>
