<Page x:Class="WpfApp_Book.Chapters.Chapter8_Final.Answers.PacManAnswer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Ответ: Pac-Man"
      Focusable="True" Loaded="Page_Loaded" Unloaded="Page_Unloaded" KeyDown="Page_KeyDown">

    <Grid Background="#000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Верхняя панель -->
        <Border Grid.Row="0" Background="#000" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Счёт -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="1UP" Foreground="White" FontSize="14" FontWeight="Bold" FontFamily="Consolas"/>
                    <TextBlock x:Name="ScoreText" Text="0" Foreground="White" FontSize="20" FontWeight="Bold" FontFamily="Consolas"/>
                </StackPanel>
                
                <!-- Заголовок -->
                <TextBlock Grid.Column="1" Text="PAC-MAN" FontSize="28" FontWeight="Bold" 
                           Foreground="#FFFF00" FontFamily="Impact" VerticalAlignment="Center"/>
                
                <!-- Рекорд -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock Text="HIGH SCORE" Foreground="White" FontSize="14" FontWeight="Bold" FontFamily="Consolas"/>
                    <TextBlock x:Name="HighScoreText" Text="0" Foreground="White" FontSize="20" 
                               FontWeight="Bold" FontFamily="Consolas" HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Игровое поле -->
        <Border Grid.Row="1" Background="#000" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas x:Name="GameCanvas" Width="532" Height="588" Background="#000000" ClipToBounds="True"/>
        </Border>
        
        <!-- Нижняя панель -->
        <Border Grid.Row="2" Background="#000" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Жизни -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="LIVES: " Foreground="White" FontSize="14" FontFamily="Consolas" VerticalAlignment="Center"/>
                    <StackPanel x:Name="LivesPanel" Orientation="Horizontal"/>
                </StackPanel>
                
                <!-- Статус -->
                <TextBlock Grid.Column="1" x:Name="StatusText" Text="PRESS SPACE TO START" 
                           Foreground="#FFFF00" FontSize="16" FontWeight="Bold" FontFamily="Consolas"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
                <!-- Уровень -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="LEVEL: " Foreground="White" FontSize="14" FontFamily="Consolas"/>
                    <TextBlock x:Name="LevelText" Text="1" Foreground="#00FFFF" FontSize="14" FontWeight="Bold" FontFamily="Consolas"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
