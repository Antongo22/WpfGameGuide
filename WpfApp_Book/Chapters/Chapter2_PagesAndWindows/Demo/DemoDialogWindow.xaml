<Window x:Class="WpfGameGuide.Chapters.Chapter2_PagesAndWindows.Demo.DemoDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Модальное окно" Height="150" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Это модальное окно" FontSize="16" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="OK_Click"/>
            <Button Content="Отмена" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
