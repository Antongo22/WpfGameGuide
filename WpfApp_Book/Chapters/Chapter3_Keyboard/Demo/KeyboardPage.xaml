private void Page_KeyDown(object sender, KeyEventArgs e)
{
    switch (e.Key)
    {
        case Key.Up:
        case Key.W:
            MoveUp();
            break;
        case Key.Down:
        case Key.S:
            MoveDown();
            break;
        case Key.Space:
            Jump();
            break;
        case Key.Escape:
            PauseGame();
            break;
    }
}
