// –ü—Ä–æ–≤–µ—Ä–∫–∞ –≥—Ä–∞–Ω–∏—Ü –∏ –æ—Ç—Å–∫–æ–∫
bool bounced = false;

// –õ–µ–≤–∞—è –∏ –ø—Ä–∞–≤–∞—è –≥—Ä–∞–Ω–∏—Ü—ã ‚Üí –∏–Ω–≤–µ—Ä—Ç–∏—Ä—É–µ–º velocityX
if (x &lt;= 0)
{
    x = 0;                    // –ù–µ –¥–∞—ë–º —É–π—Ç–∏ –∑–∞ –≥—Ä–∞–Ω–∏—Ü—É
    velocityX = -velocityX;   // –û—Ç—Å–∫–æ–∫
    bounced = true;
}
else if (x + ballWidth &gt;= canvasWidth)
{
    x = canvasWidth - ballWidth;
    velocityX = -velocityX;
    bounced = true;
}

// –í–µ—Ä—Ö–Ω—è—è –∏ –Ω–∏–∂–Ω—è—è –≥—Ä–∞–Ω–∏—Ü—ã ‚Üí –∏–Ω–≤–µ—Ä—Ç–∏—Ä—É–µ–º velocityY
if (y &lt;= 0)
{
    y = 0;
    velocityY = -velocityY;
    bounced = true;
}
else if (y + ballHeight &gt;= canvasHeight)
{
    y = canvasHeight - ballHeight;
    velocityY = -velocityY;
    bounced = true;
}

// –î–µ–π—Å—Ç–≤–∏—è –ø—Ä–∏ –æ—Ç—Å–∫–æ–∫–µ
if (bounced)
{
    PlaySound();    // –ó–≤—É–∫ –æ—Ç—Å–∫–æ–∫–∞
    ChangeColor();  // –°–º–µ–Ω–∞ —Ü–≤–µ—Ç–∞
    bounceCount++;  // –°—á—ë—Ç—á–∏–∫
}
