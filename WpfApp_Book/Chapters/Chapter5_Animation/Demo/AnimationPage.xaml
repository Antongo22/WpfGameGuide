                        <TextBlock FontFamily="Consolas" Foreground="White" xml:space="preserve" FontSize="12">
private void GameLoop(object? sender, EventArgs e)
{
    // 1. –û–ë–ù–û–í–õ–ï–ù–ò–ï –°–û–°–¢–û–Ø–ù–ò–Ø
    // –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—É—â—É—é –ø–æ–∑–∏—Ü–∏—é
    double x = Canvas.GetLeft(Ball);
    double y = Canvas.GetTop(Ball);
    
    // –ü—Ä–∏–º–µ–Ω—è–µ–º —Å–∫–æ—Ä–æ—Å—Ç—å (velocityX, velocityY –ø–∏–∫—Å–µ–ª–µ–π –∑–∞ –∫–∞–¥—Ä)
    x += velocityX;
    y += velocityY;
    
    // 2. –ü–†–û–í–ï–†–ö–ê –£–°–õ–û–í–ò–ô
    // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å—Ç–æ–ª–∫–Ω–æ–≤–µ–Ω–∏–µ —Å –≥—Ä–∞–Ω–∏—Ü–∞–º–∏
    if (x &lt;= 0 || x + ballWidth &gt;= canvasWidth)
    {
        velocityX = -velocityX;  // –û—Ç—Å–∫–æ–∫ –ø–æ X
        OnBounce();              // –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ –¥–µ–π—Å—Ç–≤–∏—è
    }
    if (y &lt;= 0 || y + ballHeight &gt;= canvasHeight)
    {
        velocityY = -velocityY;  // –û—Ç—Å–∫–æ–∫ –ø–æ Y
        OnBounce();
    }
    
    // 3. –û–ë–ù–û–í–õ–ï–ù–ò–ï UI
    Canvas.SetLeft(Ball, x);
    Canvas.SetTop(Ball, y);
}
