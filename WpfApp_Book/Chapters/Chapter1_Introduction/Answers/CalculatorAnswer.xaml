<Page x:Class="WpfApp_Book.Chapters.Chapter1_Introduction.Answers.CalculatorAnswer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Ответ: Калькулятор">

    <Grid Background="#1A252F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <StackPanel>
                <TextBlock Text="✅ Ответ: Калькулятор" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Глава 1 — Знакомство с компонентами" Foreground="#95A5A6" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Калькулятор -->
        <Border Grid.Row="1" Background="#34495E" CornerRadius="15" Padding="30" 
                Margin="50" HorizontalAlignment="Center" VerticalAlignment="Center"
                MinWidth="350">
            <StackPanel>
                
                <!-- Дисплей -->
                <Border Background="#2C3E50" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock x:Name="ExpressionText" Text="" Foreground="#95A5A6" 
                                   FontSize="14" HorizontalAlignment="Right"/>
                        <TextBlock x:Name="ResultText" Text="0" Foreground="White" 
                                   FontSize="36" FontWeight="Bold" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>
                
                <!-- Поля ввода -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="Number1Box" Grid.Column="0" FontSize="24" Padding="10" 
                             TextAlignment="Center" Text="0"/>
                    <TextBlock x:Name="OperatorText" Grid.Column="1" Text="+" FontSize="24" 
                               Foreground="White" Margin="15,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="Number2Box" Grid.Column="2" FontSize="24" Padding="10" 
                             TextAlignment="Center" Text="0"/>
                </Grid>
                
                <!-- Кнопки операций -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" Content="+" FontSize="20" Height="50" Margin="2"
                            Background="#3498DB" Foreground="White" Click="Operation_Click"/>
                    <Button Grid.Column="1" Content="-" FontSize="20" Height="50" Margin="2"
                            Background="#3498DB" Foreground="White" Click="Operation_Click"/>
                    <Button Grid.Column="2" Content="*" FontSize="20" Height="50" Margin="2"
                            Background="#3498DB" Foreground="White" Click="Operation_Click"/>
                    <Button Grid.Column="3" Content="/" FontSize="20" Height="50" Margin="2"
                            Background="#3498DB" Foreground="White" Click="Operation_Click"/>
                </Grid>
                
                <!-- Кнопка вычисления -->
                <Button Content="= Вычислить" FontSize="18" Height="50" 
                        Background="#27AE60" Foreground="White" FontWeight="Bold"
                        Click="Calculate_Click" Margin="0,0,0,10"/>
                
                <!-- Кнопка очистки -->
                <Button Content="C Очистить" FontSize="14" Height="40" 
                        Background="#E74C3C" Foreground="White"
                        Click="Clear_Click"/>
                
                <!-- Сообщение об ошибке -->
                <TextBlock x:Name="ErrorText" Text="" Foreground="#E74C3C" 
                           FontSize="14" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
