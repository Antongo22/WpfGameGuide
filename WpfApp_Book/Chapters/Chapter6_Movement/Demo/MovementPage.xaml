        Direction.Down  =&gt; new Point(head.X, head.Y + CellSize),
        Direction.Left  =&gt; new Point(head.X - CellSize, head.Y),
        Direction.Right =&gt; new Point(head.X + CellSize, head.Y),
        _ =&gt; head
    };
    
    // 2. –î–æ–±–∞–≤–ª—è–µ–º –Ω–æ–≤—É—é –≥–æ–ª–æ–≤—É –≤ –Ω–∞—á–∞–ª–æ —Å–ø–∏—Å–∫–∞
    snakeBody.Insert(0, newHead);
    
    // 3. –ü—Ä–æ–≤–µ—Ä—è–µ–º, —Å—ä–µ–ª–∏ –ª–∏ –µ–¥—É
    if (newHead == foodPosition)
    {
        // –°—ä–µ–ª–∏ –µ–¥—É ‚Äî –∑–º–µ–π–∫–∞ —Ä–∞—Å—Ç—ë—Ç, –ù–ï —É–¥–∞–ª—è–µ–º —Ö–≤–æ—Å—Ç
        score++;
        SpawnFood();
    }
    else
    {
        // –ù–µ —Å—ä–µ–ª–∏ ‚Äî —É–¥–∞–ª—è–µ–º —Ö–≤–æ—Å—Ç (–¥–ª–∏–Ω–∞ –æ—Å—Ç–∞—ë—Ç—Å—è –ø—Ä–µ–∂–Ω–µ–π)
        snakeBody.RemoveAt(snakeBody.Count - 1);
    }
    
    // 4. –ü–µ—Ä–µ—Ä–∏—Å–æ–≤—ã–≤–∞–µ–º –≤—Å–µ —Å–µ–≥–º–µ–Ω—Ç—ã
    RedrawSnake();
}
