<Page x:Class="WpfGameGuide.Chapters.Chapter3_Keyboard.Answers.KeyGameAnswer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Ответ: Игра Нажми клавишу"
      Focusable="True" Loaded="Page_Loaded" KeyDown="Page_KeyDown">

    <Grid Background="#1A252F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <StackPanel>
                <TextBlock Text="✅ Ответ: Игра 'Нажми клавишу'" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Глава 3 — Работа с клавиатурой" Foreground="#95A5A6" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Игровое поле -->
        <Border Grid.Row="1" Background="#34495E" CornerRadius="20" Padding="40" 
                Margin="50" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center">
                
                <!-- Таймер -->
                <TextBlock x:Name="TimerText" Text="Время: 30" FontSize="18" 
                           Foreground="#F39C12" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                
                <!-- Счёт -->
                <TextBlock x:Name="ScoreText" Text="Счёт: 0" FontSize="28" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center"/>
                
                <!-- Инструкция -->
                <TextBlock x:Name="InstructionText" Text="Нажмите Старт!" FontSize="16" 
                           Foreground="#95A5A6" HorizontalAlignment="Center" Margin="0,10,0,20"/>
                
                <!-- Буква для нажатия -->
                <Border x:Name="LetterBorder" Background="#2C3E50" CornerRadius="15" 
                        Width="150" Height="150" Margin="0,0,0,20">
                    <TextBlock x:Name="LetterText" Text="?" FontSize="80" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                
                <!-- Обратная связь -->
                <TextBlock x:Name="FeedbackText" Text="" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="StartButton" Content="▶ Старт" Width="120" Height="45" FontSize="16"
                            Background="#27AE60" Foreground="White" Margin="0,0,10,0"
                            Click="Start_Click"/>
                    <Button Content="↻ Сброс" Width="120" Height="45" FontSize="16"
                            Background="#E74C3C" Foreground="White"
                            Click="Reset_Click"/>
                </StackPanel>
                
                <!-- Рекорд -->
                <TextBlock x:Name="HighScoreText" Text="Рекорд: 0" FontSize="14" 
                           Foreground="#95A5A6" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
