<Page x:Class="WpfGameGuide.Chapters.Chapter5_Animation.Answers.DVDAnswer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Ответ: DVD-заставка" Loaded="Page_Loaded" Unloaded="Page_Unloaded">

    <Grid Background="#000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#1a1a1a" Padding="15">
            <StackPanel>
                <TextBlock Text="✅ Ответ: DVD-заставка" FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Глава 5 — Анимация объектов" Foreground="#666" Margin="0,3,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Canvas для анимации -->
        <Canvas x:Name="AnimationCanvas" Grid.Row="1" Background="#000000" ClipToBounds="True">
            
            <!-- DVD логотип -->
            <Border x:Name="DVDLogo" Canvas.Left="100" Canvas.Top="100" 
                    Background="#E74C3C" CornerRadius="8" Padding="15,8">
                <TextBlock x:Name="DVDText" Text="DVD" FontSize="32" FontWeight="Bold" 
                           Foreground="White" FontFamily="Arial Black"/>
            </Border>
            
        </Canvas>
        
        <!-- Панель управления -->
        <Border Grid.Row="2" Background="#1a1a1a" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Кнопки -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="StartStopButton" Content="▶ Старт" Width="100" Height="35" 
                            Background="#27AE60" Foreground="White" Margin="0,0,10,0"
                            Click="StartStop_Click"/>
                    <Button Content="↻ Сброс" Width="80" Height="35" 
                            Background="#E74C3C" Foreground="White"
                            Click="Reset_Click"/>
                </StackPanel>
                
                <!-- Скорость -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Скорость:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Slider x:Name="SpeedSlider" Width="150" Minimum="1" Maximum="15" Value="5" 
                            VerticalAlignment="Center" ValueChanged="SpeedSlider_ValueChanged"/>
                    <TextBlock x:Name="SpeedText" Text="5" Foreground="White" VerticalAlignment="Center" 
                               Margin="10,0,0,0" Width="20"/>
                </StackPanel>
                
                <!-- Статистика -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Отскоков: " Foreground="#95A5A6"/>
                    <TextBlock x:Name="BounceCountText" Text="0" Foreground="#F39C12" FontWeight="Bold"/>
                    <TextBlock x:Name="CornerHitText" Text="" Foreground="#27AE60" FontWeight="Bold" Margin="20,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
