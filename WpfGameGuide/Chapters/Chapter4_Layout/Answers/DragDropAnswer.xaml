<Page x:Class="WpfGameGuide.Chapters.Chapter4_Layout.Answers.DragDropAnswer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Ответ: Drag-Drop редактор">

    <Grid Background="#1A252F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <Grid>
                <StackPanel>
                    <TextBlock Text="✅ Ответ: Drag-Drop редактор" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Глава 4 — Размещение объектов" Foreground="#95A5A6" Margin="0,3,0,0"/>
                </StackPanel>
                <Button Content="↻ Сброс" HorizontalAlignment="Right" VerticalAlignment="Center"
                        Width="80" Height="30" Background="#E74C3C" Foreground="White"
                        Click="Reset_Click"/>
            </Grid>
        </Border>
        
        <!-- Canvas для Drag-Drop -->
        <Canvas x:Name="MainCanvas" Grid.Row="1" Background="#2C3E50" 
                ClipToBounds="True" Margin="10">
            
            <!-- Фигуры будут добавлены программно -->
            
        </Canvas>
        
        <!-- Информационная панель -->
        <Border Grid.Row="2" Background="#34495E" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Координаты:" Foreground="#95A5A6" FontSize="12"/>
                    <TextBlock x:Name="CoordsText" Text="X: —  Y: —" Foreground="White" FontSize="14" FontWeight="Bold"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="До центра Canvas:" Foreground="#95A5A6" FontSize="12"/>
                    <TextBlock x:Name="DistanceToCenterText" Text="— px" Foreground="#3498DB" FontSize="14" FontWeight="Bold"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock Text="Столкновения:" Foreground="#95A5A6" FontSize="12"/>
                    <TextBlock x:Name="CollisionText" Text="Нет" Foreground="#27AE60" FontSize="14" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
