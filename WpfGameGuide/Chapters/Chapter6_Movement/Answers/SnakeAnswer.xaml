<Page x:Class="WpfGameGuide.Chapters.Chapter6_Movement.Answers.SnakeAnswer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Ответ: Змейка" 
      Focusable="True" Loaded="Page_Loaded" Unloaded="Page_Unloaded" KeyDown="Page_KeyDown">

    <Grid Background="#1A252F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <Grid>
                <StackPanel>
                    <TextBlock Text="✅ Ответ: Змейка" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Глава 6 — Управление и связывание объектов" Foreground="#95A5A6" Margin="0,3,0,0"/>
                </StackPanel>
                <TextBlock x:Name="ScoreText" Text="Счёт: 0" FontSize="24" FontWeight="Bold" 
                           Foreground="#F39C12" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Игровое поле -->
        <Border Grid.Row="1" Background="#1a1a1a" Margin="10" CornerRadius="5">
            <Canvas x:Name="GameCanvas" Background="#1a1a1a" ClipToBounds="True"/>
        </Border>
        
        <!-- Панель управления -->
        <Border Grid.Row="2" Background="#2C3E50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="StartButton" Content="▶ Старт" Width="100" Height="35" 
                            Background="#27AE60" Foreground="White" Margin="0,0,10,0"
                            Click="Start_Click"/>
                    <Button Content="↻ Заново" Width="90" Height="35" 
                            Background="#E74C3C" Foreground="White"
                            Click="Reset_Click"/>
                </StackPanel>
                
                <TextBlock Grid.Column="1" x:Name="StatusText" Text="Используйте ↑↓←→ или WASD" 
                           Foreground="#95A5A6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Рекорд: " Foreground="#95A5A6" VerticalAlignment="Center"/>
                    <TextBlock x:Name="HighScoreText" Text="0" Foreground="#27AE60" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
